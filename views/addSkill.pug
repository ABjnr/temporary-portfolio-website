extends layout 

block layout-content
    h1 Add a new skill
    a(href="/skill") Back to skills
    form(action="/skill/add", method="post") 
        p
            label Skill Name:
            input(type="text", name="skillName", required)
        p 
            label Skill Level:
            input(type="text", name="skillLevel", required)
        button(type="submit") Add Skill