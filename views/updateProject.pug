extends layout

block layout-content
  h1 Update Project
  a(href="/project") Back to Projects

  form(action="/project/update", method="POST")
    // Hidden input to pass the project ID
    input(type="hidden", name="id", value=project._id)

    p
      label(for="title") Title:
      input(type="text", name="title", id="title", value=project.title, required)

    p
      label(for="description") Description:
      input(type="text" name="description", id="description", value=project.description, required)

    p
      label(for="technologies") Technologies:
      input(type="text", name="technologies", id="technologies", value=project.technologies)

    p
      label(for="githubLink") GitHub Link:
      input(type="url", name="githubLink", id="githubLink", value=project.githubLink)

    p
      label(for="liveLink") Live Link:
      input(type="url", name="liveLink", id="liveLink", value=project.liveLink)

    button(type="submit") Update Project
